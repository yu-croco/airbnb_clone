= render 'partials/navbar'
.container
  .row
    .col-md-6.col-md-offset-3.text-center
      %h2 登録
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render 'partials/devise_error_message'
        %hr/
        = link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook"
        %hr/
        .form-group
          = f.input :email, label: "eメール", required: true, autofocus: true, class: "form-control"
        .form-group
          = f.input :password, label: "パスワード", required: true, class: "form-control", hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length)
        .form-group
          = f.input :password_confirmation, label: "パスワード確認", required: true, class: "form-control"
        .actions
          = f.button :submit, "アカウント作成", class: "btn btn-success"
      = render "devise/shared/links"
