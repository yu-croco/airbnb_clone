<%= render 'partials/navbar' %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<h2>ログイン</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-group">
					<%= f.label :eメール %><br />
					<%= f.email_field :email, class: "form-control", placeholder: "eメール", autofocus: true %>
				</div>

				<div class="form-group">
					<%= f.label :パスワード %><br />
					<%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "off" %>
				</div>

				<% if devise_mapping.rememberable? -%>
					<div class="field">
					<%= f.check_box :remember_me %>
					<%= f.label :ログイン情報を記憶する %>
					</div>
				<% end -%>

				<div class="actions">
					<%= f.submit "ログイン", class: "btn btn-primary" %>
				</div>
			<% end %>

			<%= render "devise/shared/links" %>
		<div>
	</div>
</div>


