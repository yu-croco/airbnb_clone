= render 'partials/navbar'
.container
  .col-md-3
    = render 'partials/verticalnavbar'
  .col-md-9
    .panel.panel-default
      .panel-heading
        .text-center
          %span.title-size-normal 料金の設定
      .panel-body
        = simple_form_for @listing do |f|
          .row
            .col-md-4
              .form-group
                = f.input :price_pernight, label: "一泊あたりの料金", as: :integer, hint: "例: 1,000円", required: true, class: "form-control"
          .actions
            = f.submit "更新", class: "btn btn-primary"
