<%= render 'partials/navbar' %>

<div class="jumbotron row-space-0 listing-show">
	<div id="myCarousel" class="carousel slide" data-ride="carousel">

		<% if @photos.length > 1 %>
			<ol class="carousel-indicators">
				<% @photos.each do |photo| %>
					<li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
				<% end %>
			</ol>
		<% end %>

		<div class="carousel-inner" role="listbox">
			<% if @photos %>
				<% @photos.each do |photo| %>
					<div class="item <%= 'active' if photo.id == @photos[0].id %>">
						<%= image_tag photo.image.url(), class:"listing-photos" %>
					</div>
				<% end %>
			<% end %>
		</div>

		<!-- arrow -->
		<% if @photos.length > 1%>
			<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		<% end %>
	</div>
</div>

<!-- summary -->
<div class="container-fluid container-listing-show">
	<div class="container">
		<div class="listing-summary row-space-3 row-space-top-3">
			<div class="row">
				<div class="col-md-3 text-center row-space-2">
					<%= link_to user_path(@listing.user) do %>
						<%= image_tag @listing.user.image, class:"img-circle profile-2" unless @listing.user.image.nil? %>
					<% end %>
					<h5><%= @listing.user.name %></h5>
				</div>
				<div class="col-md-6">
					<div class="listing-title">
						<%= @listing.listing_title %>
					</div>
					<div class="row row-space-top-4">
						<div class="col-sm-3 col-xs-3 text-center">
							<i class="fa fa-home fa-3x"></i>
							<h5><%= @listing.house_type %></h5>
						</div>
						<div class="col-sm-3 col-xs-3 text-center">
							<i class="fa fa-male fa-3x" aria-hidden="true"></i>
							<h5><%= @listing.house_size %></h5>
						</div>
						<div class="col-sm-3 col-xs-3 text-center">
							<i class="fa fa-clock-o fa-3x" aria-hidden="true"></i>
							<h5>築<%= @listing.house_years %>年</h5>
						</div>
					</div>
				</div>

				<!-- reservation form -->
				<div class="col-md-3">
					<div class="panel panel-default panel-show">
						<div class="panel-heading">
								<span class="price-pernight"><%= @listing.price_pernight %>円（一晩あたり）</span>
						</div>

						<div class="panel-body panel-real">
							<%= simple_form_for [@listing, @listing.reservations.new] do |f| %>

								<%= f.input :listing_id, as: :hidden %>

								<div class="row row-space-2">
									<div class="col-md-6">
										<%= f.input :start_date, label: "チェックイン", as: :string, placeholder: "開始日", class: "form-control" %>
									</div>

									<div class="col-md-6">
										<%= f.input :end_date, label: "チェックアウト", as: :string, placeholder: "終了日", class: "form-control" %>
									</div>
								</div>

								<div class="actions text-center">
									<%= f.button :submit, "この日程で予約する", class: "btn btn-primary btn-wide" %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- main content -->
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<h3 class="row-space-3">宿泊先詳細情報</h3>
				<p>
					<%= @listing.listing_content %>
				</p>
		</div>
		<div class="col-md-3">
		</div>
	</div>

	<!-- google map -->
	<div class="row">
		<div class="col-md-9">
			<h3>アクセス</h3>
			<div id="map"></div>
		</div>
		<div class="col-md-3">
		</div>
	</div>

</div>
<script>
	function initMap() {
		// Create the map.
		let map = new google.maps.Map(document.getElementById('map'), {
			zoom: 14,
			center: {lat: <%= @listing.latitude %>, lng: <%= @listing.longitude %>},
			mapTypeId: google.maps.MapTypeId.TERRAIN
		});

		// Construct the circle for each value in citymap.
		// Note: We scale the area of the circle based on the population.
		// Add the circle for this city to the map.
		let cityCircle = new google.maps.Circle({
			strokeColor: '#FF0000',
			strokeOpacity: 0.8,
			strokeWeight: 2,
			fillColor: '#FF0000',
			fillOpacity: 0.35,
			map: map,
			center: {lat: <%= @listing.latitude %>, lng:<%= @listing.longitude %>},
			radius: 500
		});
	}
</script>
<script async defer
	src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCSOxMnIVJxZQQ-aeHTJDJdLQs084hgTgM&callback=initMap">
</script>
