<!DOCTYPE html>
<html>
	<head>
		<title>Airbnb Clone</title>
		<%= render 'layouts/head' %>
	</head>
	<body>
		<%= yield %>

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<% unless flash.empty? %>
			<script type="text/javascript">
				<% flash.each do |f|  %>
					<% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
					toastr['<%= type %>']('<%= f[1] %>');
				<% end %>
			</script>
		<% end %>
	</body>
</html>
